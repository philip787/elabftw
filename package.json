{
  "name": "elabftw",
  "description": "Free and open source electronic lab notebook for research labs",
  "main": "Gruntfile.js",
  "directories": {
    "test": "tests"
  },
  "dependencies": {
    "@fancyapps/fancybox": "3.5.*",
    "@fortawesome/fontawesome-svg-core": "1.2.*",
    "@fortawesome/free-brands-svg-icons": "5.9.*",
    "@fortawesome/free-regular-svg-icons": "5.9.*",
    "@fortawesome/free-solid-svg-icons": "5.9.*",
    "bootstrap": "~4.3.*",
    "bootstrap-markdown-fa5": "2.10.*",
    "dropzone": "5.5.*",
    "file-saver": "2.0.*",
    "fullcalendar": "3.10.*",
    "jquery": "3.4.*",
    "jquery-jeditable": "2.0.*",
    "jquery-ui-dist": "1.12.*",
    "marked": "0.6.*",
    "mathjax": "2.7.5",
    "moment": "2.24.*",
    "popper.js": "1.15.*",
    "prismjs": "1.16.*",
    "tinymce": "5.0.*"
  },
  "devDependencies": {
    "apidoc": "0.17.*",
    "eslint": "^5.15.0",
    "expose-loader": "0.7.*",
    "grunt": "1.0.*",
    "grunt-contrib-cssmin": "3.0.*",
    "grunt-contrib-uglify-es": "gruntjs/grunt-contrib-uglify#harmony",
    "grunt-contrib-watch": "1.1.*",
    "grunt-shell": "3.0.*",
    "lodash": "~4.17.5",
    "snyk": "1.*",
    "stylelint": "^10.0.0",
    "stylelint-config-recommended": "^2.1.0",
    "stylelint-config-standard": "^18.2.0",
    "webpack": "4.35.*",
    "webpack-cli": "3.3.*"
  },
  "scripts": {
    "apidoc": "apidoc -o _apidoc -i src/controllers",
    "build": "webpack-cli --config builder.js",
    "buildall": "grunt && yarn build",
    "coverage": "php vendor/bin/codecept run --skip acceptance --skip functionnal --coverage --coverage-html",
    "csslint": "stylelint web/app/css/main.css",
    "jslint": "eslint web/app/js/src",
    "phpcs": "./vendor/bin/php-cs-fixer fix --config=.php_cs.dist -v --using-cache=no",
    "phpmetrics": "phpmetrics --report-html=metrics . && firefox metrics/index.html",
    "phpstan": "phpstan analyse --memory-limit 2G -l 7 src",
    "psalm": "psalm -c=src/tools/psalm.xml",
    "srcdoc": "phpDocumentor run --cache-folder /tmp -i ./cache -i ./uploads -d src/classes -d src/controllers -d src/exceptions -d src/interfaces -d src/models -d src/services -d src/traits -d web/app/controllers -t _srcdoc",
    "test": "tests/run.sh",
    "apitest": "tests/api.sh",
    "unit": "php vendor/bin/codecept run unit",
    "vulns": "snyk test"
  },
  "repository": "git+https://github.com/elabftw/elabftw.git",
  "author": "Nicolas CARPi",
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/elabftw/elabftw/issues"
  },
  "homepage": "https://www.elabftw.net"
}
